{
  "ci": false,
  "packages": [
    "packages/*"
  ],
  "version": "0.7.0",
  "granularPathspec": false,
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "allowBranch": "main",
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  },
  "ignoreChanges": [
    "packages/*"
  ]
}
